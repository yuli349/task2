{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "outFile": "./build/index.js",
    "rootDir": "./src/",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
